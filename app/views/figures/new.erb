<h2>Create New Figure</h2>
<form method="POST" action="/figures">
    <label>Name</label>  
        <input id="figure_name" type="text" name="figure[name]">

    <br><br>

    <h3>Titles</h3><br>
        <%@titles.each do |t|%>
            <%=t.name%><input type="checkbox" name="figure[title_ids][]" id="title_<%=t.id%>" value="<%=t.id%>">
        <%end%>

    <h3>Create New Title:</h3><br>
        <input type="text" name="title[name]" id="new_title"></input>

        <h3>Landmarks</h3><br>
        <%@landmarks.each do |lm|%>
            <%=lm.name%><input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=lm.id%>" value="<%=lm.id%>">
        <%end%>

    <h3>Create New Landmark:</h3><br>
        <label>Name:</label>
        <input type="text" name="landmark[name]" id="new_landmark"></input>
        <label>Year:</label>
        <input type="text" name="landmark[year_completed]" id="landmark_year_completed"></input>

    <input type="submit" value="Create New Figure">
</form>

<a class="button" href="/figures">Figures</a>
