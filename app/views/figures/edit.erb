<h2>Edit Historical Figure</h2>

<form method="POST" action="/figures/<%=@figure.id%>">
    <input value="PATCH" id="hidden" type="hidden" name="_method">

    <label for="figure_name">Name:</label><br>
    <input id="figure_name" type="text" name="figure[name]" value="<%=@figure.name%>">

    <br><br>

    <h3>Titles</h3>
    <% @titles.each do |t| %>
        <label for="<%=t.id%>"><%=t.name%></label>
        <input type="checkbox" name="figure[title_ids][]" id="<%=t.id%>" value="<%=t.id%>" <%="checked" if @figure.titles.include?(t) %>>
    <% end %>

    <h3><label for="title_name">Create New Title:</label></h3>
    <input type="text" name="title[name]" id="title_name"></input>

    <h3>Landmarks</h3>
    <% @landmarks.each do |lm| %>
        <label for="<%=lm.id%>"><%=lm.name%></label>
        <input type="checkbox" name="figure[landmark_ids][]" id="<%=lm.id%>" <%= "checked" if @figure.landmarks.include?(lm) %> value="<%= lm.id %>">
    <% end %>

    <h3>Create New Landmark:</h3>
    <label for="new_landmark">Name:</label>
    <input type="text" name="landmark[name]" id="new_landmark"></input><br><br>
    
    <label for="landmark_year_completed">Year:</label>
    <input type="text" name="landmark[year_completed]" id="landmark_year_completed"></input><br><br>

    <input type="submit" value="Edit Figure">
</form>

<br><br>
<a class="button" href="/figures">Figures</a>
<a class="button" href="/">Home</a>
